---
import BaseLayout from '../layouts/BaseLayout.astro';

// Configuración SEO específica para esta página
const seo = {
  title: 'Sergio Links | Full-stack Developer',
  description: 'Connect with me: Portfolio, GitHub, LinkedIn, and contact info.',
  url: 'https://devbysergio.com/links',
};

// Datos de los enlaces (Fácil de editar aquí)
const links = [
  {
    title: 'Portfolio Website',
    url: '/',
    icon: 'home', // Usaremos un switch abajo para los iconos
    subtitle: 'Check out my full work & projects'
  },
  {
    title: 'LinkedIn',
    url: 'https://www.linkedin.com/in/sergio-del-cerro-32405238a/',
    icon: 'linkedin',
    subtitle: 'Let\'s connect professionally'
  },
  {
    title: 'GitHub',
    url: 'https://github.com/DevBySergio',
    icon: 'github',
    subtitle: 'View my code and contributions'
  },
  {
    title: 'VS Code Marketplace',
    url: 'https://marketplace.visualstudio.com/publishers/DevBySergio',
    icon: 'vscode',
    subtitle: 'Download my developer extensions'
  },
  {
    title: 'Email Me',
    url: 'mailto:devbysergio@gmail.com',
    icon: 'mail',
    subtitle: 'Get in touch for projects'
  }
];
---

<BaseLayout title="Links" seo={seo}>
  <div class="min-h-[80vh] flex flex-col justify-center items-center py-12 md:py-20">
    
    <div class="text-center mb-10 space-y-4 animate-in fade-in slide-in-from-bottom-4 duration-700">
      <div class="w-24 h-24 mx-auto rounded-full bg-(--color-brand)/10 flex items-center justify-center text-(--color-brand) border border-(--color-brand)/20">
        <span class="text-3xl font-bold">S</span>
      </div>

      <div>
        <h1 class="text-3xl font-extrabold text-(--color-text-main)">Sergio</h1>
        <p class="text-(--color-text-muted) font-medium">Full-Stack Software Developer</p>
      </div>
    </div>

    <ul class="w-full max-w-md space-y-4 px-4">
      {links.map((link, index) => (
        <li 
          class="animate-in fade-in slide-in-from-bottom-4 duration-700"
          style={`animation-delay: ${index * 100}ms; animation-fill-mode: backwards;`}
        >
          <a
            href={link.url}
            target={link.url.startsWith('mailto') || link.url.startsWith('/') ? '_self' : '_blank'}
            rel={link.url.startsWith('/') ? '' : 'noopener noreferrer'}
            class="
              group flex items-center gap-4 p-4 rounded-xl
              bg-white dark:bg-(--color-surface-dark)
              border border-(--color-border) dark:border-(--color-border-dark)
              hover:border-(--color-brand) dark:hover:border-(--color-brand)
              hover:shadow-md dark:hover:shadow-none
              hover:-translate-y-1
              transition-all duration-300
            "
            aria-label={`Go to ${link.title}`}
          >
            <div class="
              shrink-0 w-12 h-12 rounded-lg flex items-center justify-center
              bg-(--color-surface-muted) dark:bg-(--color-surface-muted-dark)
              text-(--color-text-main) group-hover:text-(--color-brand)
              transition-colors
            ">
              {link.icon === 'home' && (
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" /></svg>
              )}
              {link.icon === 'github' && (
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path></svg>
              )}
              {link.icon === 'linkedin' && (
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path fill-rule="evenodd" d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" clip-rule="evenodd"></path></svg>
              )}
              {link.icon === 'vscode' && (
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M23.15 2.587l-9.8.966-5.87-5.166L.867 7.032.55 16.968l6.913 8.646 5.87-5.167 9.8.967a1.67 1.67 0 0 0 1.867-1.67V4.257a1.67 1.67 0 0 0-1.85-1.67zM22 17.653l-8.623-1.313V7.66L22 6.35v11.303zm-11.623 2.06L4.032 23.08V.92L10.377 4.29v15.423z"/></svg>
              )}
              {link.icon === 'mail' && (
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
              )}
            </div>

            <div class="flex-1 min-w-0">
              <h2 class="font-bold text-(--color-text-main) group-hover:text-(--color-brand) transition-colors truncate">
                {link.title}
              </h2>
              <p class="text-xs sm:text-sm text-(--color-text-muted) truncate">
                {link.subtitle}
              </p>
            </div>

            <svg class="w-5 h-5 text-(--color-text-muted) group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </li>
      ))}
    </ul>

    <div class="mt-12 text-center animate-in fade-in slide-in-from-bottom-4 duration-700 delay-500">
       <a href="/" class="text-sm font-medium text-(--color-text-muted) hover:text-(--color-brand) transition-colors">
         ← Back to Website
       </a>
    </div>

  </div>
</BaseLayout>